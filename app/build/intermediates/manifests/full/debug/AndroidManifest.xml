<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crestaSom.KTMPublicRoute"
    android:versionCode="7"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconktmlogonew"
        android:label="KTM Public Route"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.crestaSom.KTMPublicRoute.SettingsActivity"
            android:label="Preferences"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.MinWidth" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.crestaSom.KTMPublicRoute.DisclaimerActivity"
            android:label="KTM Public Route" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.NearestStopSelection"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.HelpActivity"
            android:label="@string/title_activity_help" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.DetailActivity"
            android:label="Route Detail" />
        <activity
            android:name="com.crestaSom.KTMPublicRoute.FeedBackActivity"
            android:label="@string/title_activity_feed_back"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" />
        <activity android:name="com.crestaSom.KTMPublicRoute.LanguageSelection" >
        </activity>
        <activity
            android:name="org.acra.dialog.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="org.acra.sender.SenderService"
            android:exported="false"
            android:process=":acra" />
    </application>

</manifest>