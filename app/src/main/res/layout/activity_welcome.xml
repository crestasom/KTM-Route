<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crestaSom.KTMPublicRoute.Welcomeome" >

    <TextView
        android:id="@+id/searchRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:text="Search Route"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:textStyle="bold|italic" 
        
        />

    <TextView
        android:id="@+id/viewRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchRoute"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingTop="35dp"
        android:text="View Route"
        android:textColor="#093F95"
        android:textSize="65sp"
        android:textStyle="bold|italic" />
</RelativeLayout>